export const withAuth = <P extends object>(
  Component: React.ComponentType<P>
): React.FC<P & WithAuthProps> => {
  const AuthenticatedComponent: React.FC<P & WithAuthProps> = ({
    children,
    requiredPermission,
    ...props
  }) => {
